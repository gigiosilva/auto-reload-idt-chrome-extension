{
  "manifest_version": 2,

  "name": "Auto Reload IDT",
  "description": "Refresh automatically pages on a selected interval of seconds or specific time.",
  "version": "1.1",
  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "reloadBtn.png",
    "default_popup": "popup.html"
  },

   "web_accessible_resources": ["jquery.js","script.js"],
   "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*", 
    "background",
    "storage"
  ],

   "icons": { "16": "reloadBtn.png",
              "48": "reloadBtn.png",
              "128": "reloadBtn.png" 
  }
}